<div class="container-fluid p-0">
    <div class="row">
          <div class="col-md-12">
            <div class="slider_grid" id="slider_grid">
              {%- for block in section.blocks -%}
                <div class="slide">
                   <img src="{{ block.settings.image| image_url }}"  />
                </div>
              {% endfor %}
            </div>
          </div>
    </div>
</div>
{% schema %}
{
  "name": "Slider Grid",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Slide",
      "settings": [
        {
          "type": "url",
          "id": "url",
          "label": "Banner url"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Banner Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Grid",
      "blocks": [
        {
          "type": "heading"
        }
      ]
    }
  ]
}
{% endschema %}


