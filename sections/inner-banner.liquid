<section>
    <div class="container-fluid p-0 inner_banner d-flex align-item-end justify-content-center p-5" style="background:url('{{ section.settings.image | image_url }}');">
          <div class="banner-content h-100"> 
              <h1>{{ section.settings.title | escape }}</h1>
          </div>
    </div>
</section>

{% stylesheet %}
  .inner_banner {
      height: 600px !important;
  }
{% endstylesheet %}
{% schema %}
  {
    "name": "inner_banner",
    "tag": "section",
    "class": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "About Side Image"
        },
        {
          "type": "text",
          "id": "title",
          "default": "Heading",
          "label": "Heading"
        }
    ],
    "presets": [
    {
      "name": "inner_banner"
    }
  ]
  }
{% endschema %}


